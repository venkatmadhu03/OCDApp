<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#8C99D6FF" />
      <stroke
          android:width="0dp"
          android:color="#FFF" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/colorAccent"
          android:endColor="@color/colorPrimary"
          android:angle="90" />
      <stroke
          android:width="0dp"
          android:color="@color/white" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
</selector>