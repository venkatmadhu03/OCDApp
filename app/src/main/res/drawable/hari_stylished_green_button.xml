<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <gradient
          android:startColor="#60009900"
          android:endColor="#60009900"
          android:angle="45"/>
      <padding android:left="7dp"
          android:top="7dp"
          android:right="7dp"
          android:bottom="7dp" />
      <corners android:radius="8dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="@color/green"
          android:endColor="@color/green"
          android:angle="270"/>
      <padding android:left="7dp"
          android:top="7dp"
          android:right="7dp"
          android:bottom="7dp" />
      <corners android:radius="8dp" />
    </shape>
  </item>
</selector>