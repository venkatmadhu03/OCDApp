<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listItemClickRLID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/columnLLID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/arrow">

            <ImageView
                android:id="@+id/circle1IVID"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/cart_hari" />

            <TextView
                android:id="@+id/categoryNameTitleTVID"
                style="@style/productNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/circle1IVID"
                android:singleLine="true"
                android:text="Category"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/arrow"
            style="@style/headerTitle_sub"
            android:layout_width="30dp"
            android:layout_marginRight="6dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>
</RelativeLayout>