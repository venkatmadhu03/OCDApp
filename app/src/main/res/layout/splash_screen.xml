<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005D9A"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoIVID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/logo" />

            <com.ourcitydeals.ctrl.ownLibs.ProgressWheel
                android:id="@+id/progress_wheel1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/logoIVID"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                wheel:matProg_barColor="#FFF"
                wheel:matProg_barWidth="3dp"
                wheel:matProg_rimWidth="3dp"
                wheel:matProg_progressIndeterminate="true" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>